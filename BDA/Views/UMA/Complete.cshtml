@model BDA.ViewModel.UMAViewModel
@{
    ViewData["Title"] = "UMA Request - Complete";
}

<div class="content-inner active">
    <div class="container-fluid">
        <div class="row">
            <div class="page-header">
                <div class="d-flex align-items-center">
                    <h2 class="page-header-title">UMA Request - Complete</h2>
                </div>
            </div>
        </div>
        <div class="row flex-row">
            <div class="col-xl-12 col-md-12">
                <div class="widget has-shadow">
                    <div class="widget-body">
                        @Html.Partial("_StatusBar.cshtml")
                        <br>
                    </div>
                    <div class="widget has-shadow">
                        <div class="widget-body sliding-tabs">
                            <ul class="nav nav-tabs form-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link" href="#tab-1">Create Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#tab-2">Process Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#tab-3">Submit Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" href="#tab-4">Complete Details</a>
                                </li>
                            </ul>
                            <div class="tab-content pt-3">
                                <div class="tab-pane fade active show">
                                    @Html.Partial("_ConfirmDetails.cshtml")
                                    @Html.Partial("_ActionHistory.cshtml")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>