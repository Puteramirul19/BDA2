@model BDA.ViewModel.UMAViewModel

<div id="pnl_main_form" class="widget-body">
    <div class="padding-left-20 padding-right-20">
        <div class="row flex-row">
            <div class="col-xl-12 col-md-12">
                <div class="table-responsive">
                    <div class="widget has-shadow">
                        <div class="widget-body">
                            <div class="padding-left-20 padding-right-20">
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <h5>Full Recovery</h5>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-2 form-control-label d-flex align-items-center">Received Date <span class="text-danger ml-2">*</span></div>
                                    <div class="col-xl-4">
                                        @Html.TextBoxFor(x => x.PaymentReceivedOn, new { @class = "form-control", type = "date", required = "required" })
                                    </div>
                                    <div class="col-sm-2 form-control-label d-flex align-items-center">Bank Statement <span class="text-danger ml-2">*</span></div>
                                    <div class="col-xl-4">
                                        <input type="file" name="BankStatement" class="btn btn-primary btn-sm" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>